<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/NoteListItem">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/title"
			android:layout_weight="1"
			style="@style/NoteListItemText.Title"/>

		<View
			android:id="@+id/label_5"
			style="@style/NoteDetailsLabel"
			android:layout_marginLeft="@dimen/note_list_item_label_margin_left_from_title"/>

		<View
			android:id="@+id/label_4"
			style="@style/NoteDetailsLabel"/>

		<View
			android:id="@+id/label_3"
			style="@style/NoteDetailsLabel"/>

		<View
			android:id="@+id/label_2"
			style="@style/NoteDetailsLabel"/>

		<View
			android:id="@+id/label_1"
			style="@style/NoteDetailsLabel"/>
	</LinearLayout>

	<TextView
		android:id="@+id/subtitle"
		style="@style/NoteListItemText.Subtitle"/>

</LinearLayout>