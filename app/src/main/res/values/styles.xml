<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!--
		Main Activity
	-->

	<style name="MainActivity">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:paddingLeft">@dimen/main_side_padding</item>
		<item name="android:paddingRight">@dimen/main_side_padding</item>
	</style>

	<style name="MainActivity.DualPane">
		<item name="android:orientation">horizontal</item>
	</style>


	<!--
		Notes List
	-->

	<style name="NoteListItem">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:paddingLeft">@dimen/note_list_item_side_padding</item>
		<item name="android:paddingRight">@dimen/note_list_item_side_padding</item>
		<item name="android:paddingTop">@dimen/note_list_item_vertical_padding</item>
		<item name="android:paddingBottom">@dimen/note_list_item_vertical_padding</item>
	</style>

	<style name="NoteListItemText" parent="android:Widget.TextView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:lines">1</item>
	</style>

	<style name="NoteListItemText.Title">
		<item name="android:textColor">@color/note_list_item_title</item>
		<item name="android:textSize">@dimen/note_list_item_title_text_size</item>
		<item name="android:layout_marginBottom">@dimen/note_list_item_title_bottom_margin</item>
	</style>

	<style name="NoteListItemText.Subtitle">
		<item name="android:textColor">@color/note_list_item_subtitle</item>
		<item name="android:textSize">@dimen/note_list_item_subtitle_text_size</item>
	</style>


	<style name="NoteFragmentsSeparator" parent="android:Widget.TextView">
		<item name="android:layout_width">@dimen/note_fragments_separator</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@color/note_fragments_separator</item>
	</style>


	<!--
		Note Details
	-->

	<style name="NoteDetails">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:padding">@dimen/note_details_padding</item>
	</style>

	<style name="NoteDetailsText" parent="android:Widget.TextView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="NoteDetailsText.Title">
		<item name="android:textColor">@color/note_details_title</item>
		<item name="android:textSize">@dimen/note_details_title_text_size</item>
	</style>

	<style name="NoteDetailsText.Body">
		<item name="android:textColor">@color/note_details_body</item>
		<item name="android:textSize">@dimen/note_details_body_text_size</item>
	</style>

	<style name="NoteDetailsSeparator" parent="android:Widget.TextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
	</style>

	<style name="NoteDetailsSeparator.Title">
		<item name="android:layout_marginTop">@dimen/note_details_separator_outer_margin</item>
		<item name="android:layout_marginBottom">@dimen/note_details_separator_inner_margin</item>
		<item name="android:background">@color/note_details_title</item>
	</style>

	<style name="NoteDetailsSeparator.Info">
		<item name="android:layout_marginTop">@dimen/note_details_separator_inner_margin</item>
		<item name="android:layout_marginBottom">@dimen/note_details_separator_outer_margin</item>
		<item name="android:background">@color/note_details_info</item>
	</style>

	<style name="NoteDetailsText.Info">
		<item name="android:textColor">@color/note_details_info</item>
		<item name="android:textSize">@dimen/note_details_info_text_size</item>
		<item name="android:paddingLeft">@dimen/note_details_info_left_padding</item>
	</style>


	<!--
		Note Dialog
	-->

	<style name="NoteDialog">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
	</style>

	<style name="NoteDialogScrollView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">@dimen/note_dialog_scroll_view_height</item>
	</style>

	<style name="NoteDialogEditText">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginBottom">@dimen/note_dialog_margin_common</item>
	</style>

	<style name="NoteDialogEditText.Title">
		<item name="android:textSize">@dimen/note_dialog_title_text_size</item>
	</style>

	<style name="NoteDialogEditText.Body">
		<item name="android:layout_height">fill_parent</item>
		<item name="android:textSize">@dimen/note_dialog_body_text_size</item>
	</style>

	<style name="NoteDialogButtonBar">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
	</style>

	<style name="NoteDialogButton">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
	</style>

</resources>